<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="htc_site_form">
            <field name="name">Site Form View</field>
            <field name="model">htc.site</field>
            <field name="arch" type="xml">
                <form string="site">
                    <sheet>
                        <group>
                            <field name="site_group_id"  widget="selection"
                                placeholder="Site Group Code" attrs="{'required' : True}"/>
                            <field name="site_name"  placeholder="Site Name"/>
                            <field name="site_code" attrs="{'readonly': [('id', '>', 0)]}" placeholder="Site Code"/>
                            <field name="delivery_method"/>
                            <field name="server_address" placeholder="Web API/Server Address Url"/>
                            <field name="server_port" placeholder="Server Port"/>
                            <field name="user_id"/>
                            <field name="password"/>
                            <field name="http_port"/>
                            <field name="https_port"/>
                            <field name="timezone_name"/>
                            <field name="ip_range"/>
                            <field name="interface_code"/>
                            <field name="debug_mode_enable"/>
                            <field name="file_name" widget="many2many_tags" options="{'no_create_edit':'1'}"/>
                            <field name="site_file_name_format" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="htc_site_tree">
            <field name="name">Site Tree View</field>
            <field name="model">htc.site</field>
            <field name="arch" type="xml">
               <tree>
                    <field name="site_name"/>
                    <field name="site_code"/>
                    <field name="server_address"/>
                    <field name="user_id"/>
                    <field name="password"/>
                    <field name="ip_range"/>
                    <field name="delivery_method"/>
                    <field name="site_file_name_format"/>
                    <field name="interface_code"/>
                    <field name="http_port"/>
                    <field name="https_port"/>
                    <field name="debug_mode_enable"/>
                    <field name="site_group_id"/>
                </tree>
            </field>
            
        </record>
    </data>
</odoo>