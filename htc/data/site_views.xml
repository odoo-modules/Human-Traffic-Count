<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="htc_site_form">
            <field name="name">Site Form View</field>
            <field name="model">htc.site</field>
            <field name="arch" type="xml">
                <form string="site">
                    <sheet>
                        <group>
                            <field name="site_group_id"  widget="selection"
                                placeholder="Site Group Code" attrs="{'required' : True}"/>
                            <field name="prefix" attrs="{'readonly': True}"/>
                            <field name="name"  placeholder="Site Name"/>
                            <field name="code"  widget="mask" data-inputmask="'mask': '9','repeat': 5, 'greedy' : false" attrs="{'readonly': [('id', '>', 0)]}" placeholder="Site Code"/>
                            <field name="ftp_server_url"/>
                            <field name="credential_id"/>
                            <field name="password" />
                            <field name="ip_range" />
                            <field name="interface_code"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="htc_site_tree">
            <field name="name">Site Tree View</field>
            <field name="model">htc.site</field>
            <field name="arch" type="xml">
               <tree>
                    <field name="site_group_id"  />
                    <field name="prefix" />
                    <field name="name"  />
                    <field name="code" />
                </tree>
            </field>
        </record>
    </data>
</odoo>