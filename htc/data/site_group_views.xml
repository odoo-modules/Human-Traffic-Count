<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="htc_siteGroup_form">
            <field name="name">Site Group Form View</field>
            <field name="model">htc.sitegroup</field>
            <field name="arch" type="xml">
              <form string="sitegroup">
                 <header>
                      <button string="Generate Issue" name="%(action_group_sensor_wizard_form)d" type="action" class="btn-primary"/>
                  </header>
                  <sheet>
                      <group>
                          <field name="name" id="name" placeholder="Site Group Name"/>
                          <field name="code" id="code" attrs="{'readonly': [('id', '>', 0)]}" placeholder="Site Group Code"/>
                      </group>
                      <notebook>
                        <page string="Sensors">
                          <field name="sensor_ids">
                            <tree create="false" delete="false" editable="false">
                              <field name="sensor_mac_address" readonly="1" width="80px"/>
                              <field name="device_id" readonly="1"/>
                              <field name="device_name" readonly="1"/>
                              <field name="xml_data_format" readonly="1"/>
                              <field name="site_id" readonly="1"/>
                            </tree>
                          </field>
                        </page>
                    </notebook>
                  </sheet>
                </form>
            </field>
          </record>
         <record model="ir.ui.view" id="htc_sitegroup_tree">
            <field name="name">Site Group Tree View</field>
            <field name="model">htc.sitegroup</field>
            <field name="arch" type="xml">
               <tree>
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>
    </data>
</odoo>