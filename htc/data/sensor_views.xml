<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="htc_sensor_form">
            <field name="name">Sensor Form View</field>
            <field name="model">htc.sensor</field>
            <field name="arch" type="xml">
                <form string="Sensor">
                    <sheet>
                        <group>
                            <field name="sitegroup_id"  widget="selection" placeholder="Site Group"/>
                            <field name="sensor_mac_address"  placeholder="Mac Address"/>
                            <field name="license_code"  placeholder="License Code"/>
                            <field name="device_id"  placeholder="Device Id"/>
                           <field name="site_id"  placeholder="Site"/>
                            <field name="xml_data_format"  widget="selection" placeholder="Xml Format"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"
                               groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread" placeholder="Share a message..."/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_sensor_tree" model="ir.ui.view">
            <field name="name">htc.sensor.tree</field>
            <field name="model">htc.sensor</field>
            <field name="priority">4</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sitegroup_id"  />
                    <field name="sensor_mac_address" />
                    <field name="license_code" />
                    <field name="device_id"/>
                    <field name="site_id"/>
                    <field name="xml_data_format"/>
                </tree>
            </field>
        </record>
    </data>

</odoo>